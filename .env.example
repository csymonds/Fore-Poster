# Fore-Poster Environment Configuration
# Copy this file to .env and fill in your values

# Application Environment
APP_ENV=development  # Options: development, testing, production

# Security
JWT_SECRET=your_secure_jwt_secret_here_min_32_chars

# Admin User Setup
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password

# Database Configuration (Only for production)
DB_NAME=fore_poster
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# Database Path (Only for development/SQLite)
DB_PATH=  # Leave blank to use default location in instance directory

# X (Twitter) API Credentials
X_API_KEY=your_x_api_key
X_API_SECRET=your_x_api_secret
X_ACCESS_TOKEN=your_x_access_token
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret

# AWS Configuration (Required only in production)
AWS_REGION=us-east-1
SES_SENDER=your_verified_sender@example.com
SES_RECIPIENT=notifications@example.com

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:4173

# Frontend Configuration (Vite)
VITE_API_BASE_URL=http://localhost:8000/api

# Image Upload Configuration
MAX_UPLOAD_SIZE_MB=16
ALLOWED_FILE_EXTENSIONS=png,jpg,jpeg,gif
CACHE_MAX_AGE=86400
UPLOAD_FOLDER=instance/uploads 