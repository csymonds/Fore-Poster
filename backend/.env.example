# Fore-Poster Environment Configuration

# Application Environment
APP_ENV=development  # Options: development, testing, production

# Security
JWT_SECRET=your_secure_jwt_secret_key_min_32_chars

# Admin User Setup
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password_immediately

# Database Configuration (for PostgreSQL in production)
DB_NAME=fore_poster
DB_USER=fpuser
DB_PASSWORD=your_secure_password
DB_HOST=localhost
DB_PORT=5432

# Database Path (Only for development/SQLite)
DB_PATH=  # Leave blank to use default location in instance directory

# X (Twitter) API Credentials
X_API_KEY=your_x_api_key
X_API_SECRET=your_x_api_secret
X_ACCESS_TOKEN=your_x_access_token
X_ACCESS_TOKEN_SECRET=your_x_access_token_secret

# AWS Configuration (Required only in production)
AWS_REGION=us-east-1
SES_SENDER=your_verified_ses_email@domain.com
SES_RECIPIENT=notifications@yourdomain.com

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:4173,https://yourproductiondomain.com

# Scheduler Configuration
SCHEDULER_INTERVAL_MINUTES=1
SCHEDULER_ADVANCE_MINUTES=1

# File Upload Settings
UPLOAD_FOLDER=instance/uploads
ALLOWED_FILE_EXTENSIONS=png,jpg,jpeg,gif
MAX_UPLOAD_SIZE_MB=16
CACHE_MAX_AGE=86400  # 1 day in seconds
