# Database Configuration
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost  # Optional, defaults to localhost
DB_PORT=5432      # Optional, defaults to 5432

# Security
JWT_SECRET=your_jwt_secret_key

# Admin User Setup
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_admin_password

# X (Twitter) API Credentials
X_API_KEY=your_api_key
X_API_SECRET=your_api_secret
X_ACCESS_TOKEN=your_access_token
X_ACCESS_TOKEN_SECRET=your_access_token_secret

# AWS Configuration (Only required in production)
AWS_REGION=us-east-1  # Optional, defaults to us-east-1
SES_SENDER=your_ses_sender_email
SES_RECIPIENT=your_ses_recipient_email

# Application Environment
APP_ENV=development  # Options: development, testing, production